{
  "manifest_version": 3,
  "name": "Tab Exporter",
  "version": "1.0",
  "description": "모든 탭의 URL과 제목을 MediaWiki 형식으로 내보내기",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Exporter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}